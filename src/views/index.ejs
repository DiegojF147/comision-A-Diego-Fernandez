<%- include("partials/header") -%>


<header class="d-flex justify-content-center">
    <h1>FORO MULTITEMATICO</h1>
</header>

<main class="d-flex flex-column align-items-center">        
    <button type="button" class="btn btn-primary" id="btn-new">NUEVO POST</button>
    <div class="container text-center">
        <div class="row" id="container-row">
             <% posts.forEach(post => { %>

                <article class="col-4 d-flex justify-content-center mb-3" data-id="<%= post.id %>">
                    <div class="card" style="width: 18rem;">
                        <img src="<%= post.poster %>" class="card-img-top" alt="Nuevo titulo">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= post.title %>
                            </h5>
                            <p class="card-text">
                                <%= post.description %>
                            </p>
                            <p class="card-text">
                                Fecha de Creacion: <%= post.createdAt.toLocaleString() %></p>
                            <p class="card-text">
                                Numero de ID:<%= post.id %></p>
                            <div>
                                <button class="btn btn-secondary" id="btn-edit">Editar</button>
                                <button type="" class="btn btn-danger" id="btn-delete">Eliminar</button>
                            </div>
                        </div>
                    </div>
                </article>

                <% }) %>   
        </div>
    </div>
        
        
    <div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Nuevo Post</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="formulario">
                        <div class="mb-3">
                            <label for="inputTitulo" class="col-form-label">Titulo</label>
                            <input type="text" class="form-control" id="inputTitulo">
                        </div>
                        <div class="mb-3">
                            <label for="inputContenido" class="col-form-label">Contenido</label>
                            <input type="text" class="form-control" id="inputContenido">
                        </div>
                        <div class="mb-3">
                            <label for="inputLink" class="col-form-label">LinkURL</label>
                            <input type="url" class="form-control" id="inputLink">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Limpiar</button>
                            <button type="submit" class="btn btn-primary" id="btn-save">Salvar</button>
                        </div>
                    </form>
                </div>
                    
            </div>
        </div>
    </div>                                                
</main>
    
<%- include("partials/footer") -%>    
    